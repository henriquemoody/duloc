#!/usr/bin/env bash

replacer-all-cases() {
  local from="${1}"
  local to="${2}"
  local path=${3:-.}

  replacer ${from} ${to} ${path}
  replacer $(str lower-first <<< ${from}) $(str lower-first <<< ${to}) ${path}
  replacer $(str camel-to-snake lower <<< ${from}) $(str camel-to-snake lower <<< ${to}) ${path}
  replacer $(str camel-to-dashed lower <<< ${from}) $(str camel-to-dashed lower <<< ${to}) ${path}
  replacer $(str camel-to-snake upper <<< ${from}) $(str camel-to-snake upper <<< ${to}) ${path}
  replacer $(str camel-to-dotted lower <<< ${from} | sed 's,\.,\\.,g') $(str camel-to-dotted lower <<< ${to}) ${path}
  replacer "$(str camel-to-spaced lower <<< ${from})" "$(str camel-to-spaced lower <<< ${to})" ${path}
}

replacer-all-cases "${@}"
